<resources>

    <style name="Widget.App.AboutPage" parent="about_About">
        <item name="aboutBackground">@drawable/about_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="aboutElementTextAppearance">@style/popup_elementTextAppearance</item>
        <item name="aboutDescriptionTextAppearance">@style/popup_descriptionTextAppearance</item>
        <item name="aboutGroupTextAppearance">@style/popup_groupTextAppearance</item>
        <item name="aboutSeparatorColor">@color/white</item>
        <item name="aboutElementIconTint">#FF362E</item>
    </style>

    <style name="popup_descriptionTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/popup_textcolor</item>
        <item name="android:textSize">@dimen/about_description_text_size</item>
    </style>

    <style name="popup_elementTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/popup_textcolor</item>
        <item name="android:textSize">@dimen/about_item_text_size</item>
    </style>

    <style name="popup_groupTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/popup_textcolor</item>
        <item name="android:textSize">@dimen/about_group_item_text_size</item>
    </style>

</resources>