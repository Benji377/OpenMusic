<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF362E</item>
        <item name="colorPrimaryVariant">#FF362E</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="playerBackground">@drawable/default_background_image_light</item>
        <item name="backgroundColor">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="colorSurface">?attr/colorPrimary</item>
    </style>

