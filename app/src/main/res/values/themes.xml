<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryAppColor</item>
        <item name="colorPrimaryVariant">@color/primaryAppColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="playerBackground">@drawable/default_background_image</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

