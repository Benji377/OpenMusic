<resources>
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF362E</item>
        <item name="colorPrimaryDark">#BF2923</item>
        <item name="colorPrimaryVariant">#FF362E</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="playerBackground">@drawable/default_background_image_light</item>
        <item name="backgroundColor">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackBarTextStyle</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MySnackBarTextStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

</resources>